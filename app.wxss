/**app.wxss**/
.container {
  display: flex;
  box-sizing: border-box;
  color: #6B6B6B;
} 

.tapContainer {
  width: 100%;
  padding: 0;
  border-radius: 0px;
  background: #F3F4F8;
  color: #6B6B6B;
}

.tapContainer::after{
  border: none;
}

.right_icon_url {
  width: 20px;
  height: 20px;
}

.tapLogin {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: transparent;
}

.tapLogin::after{
  border: none;
}


.title_text {
  font-size: 18px;
  font-weight: 500;
  color: #3C4A55;
}

.detail_text {
  font-size: 15px;
  color: #6B6B6B;
}


.button {
  color: #fff;
  margin: 0px;
  padding: 0px;
}
.button::after {
  border: none;
}

.header_text {
  font-size: 18px;
  color: #454545;
}
.detail_text {
  font-size: 13px;
  color: #A2A2A2;
}